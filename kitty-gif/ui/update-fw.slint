            height: 31px;
            frame-112 := Rectangle {
                x: 0px;
                y: 0px;
                width: 216px;
                height: 31px;
                background: #ffffff1a;
                frame-117 := Rectangle {
                    x: 12px;
                    y: 8px;
                    width: 108px;
                    height: 15px;
                    current-version := Text {
                        x: 0;
                        text: "Current Version";
                        color: #ffffff;
                        font-family: "Roboto Mono";
                        font-size: 10px;
                        font-weight: 500;
                        horizontal-alignment: left; 
                    }
                }
                _1-0-1 := Text {
                    x: 174px;
                    y: 8px;
                    text: "1.0.1";
                    color: #ffffff;
                    font-family: "Roboto Mono";
                    font-size: 10px;
                    font-weight: 500;
